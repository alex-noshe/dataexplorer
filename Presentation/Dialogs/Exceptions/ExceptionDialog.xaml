<Window x:Class="DataExplorer.Presentation.Dialogs.Exceptions.ExceptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExceptionDialog" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Name="MessageLabel"
            Grid.Row="0"
            TextWrapping="Wrap" 
            Margin="4"/>
        <TextBox 
            Name="BodyTextBox"
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
