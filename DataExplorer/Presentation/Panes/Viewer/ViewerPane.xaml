<UserControl 
    x:Class="DataExplorer.Presentation.Panes.Viewer.ViewerPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewer="clr-namespace:DataExplorer.Presentation.Panes.Viewer"
    xmlns:scatterPlot="clr-namespace:DataExplorer.Presentation.Views.ScatterPlot"
    mc:Ignorable="d" 
    d:DesignHeight="400" 
    d:DesignWidth="400" d:DataContext="{d:DesignInstance viewer:ViewerPaneViewModel}">
    <Grid>
        <TextBlock Text="{Binding Message}" />
        <scatterPlot:ScatterPlotView DataContext="{Binding ScatterPlotViewModel}" />
    </Grid>
</UserControl>
